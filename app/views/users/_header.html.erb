<header class="navbar navbar-fixed-top">
  <section class="container">
    <%= link_to "JOURNAL", "", class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag "", class: "profile-image" %>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to @user.given_name, "" %>
            </li>
            <li class="divider"></li>
            <li>
              <%= form_for @user, :html => { class: "logout_user" }, 
                                url: logout_path, 
                                method: "delete" do |f| %>
                <%= f.button "Sign Out", class: "btn btn-primary", onclick: "signOut()" %>
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </nav>
  </section>
</header>